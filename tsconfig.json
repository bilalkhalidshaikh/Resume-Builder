{
  "compilerOptions": {
    "target": "es5",                     
    "module": "commonjs",                
    "strict": true,                      
    "esModuleInterop": true,             
    "outDir": "./src/dist",                  
    "rootDir": "./src/scripts",                  
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts"                        
  ],
  "exclude": [
    "node_modules"
  ]
}
