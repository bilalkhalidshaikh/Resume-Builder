{
  "compilerOptions": {
    "target": "ES6", // or later version like ES2017, ES2020
    "lib": ["dom", "es6"], // Ensure es6 features are included                
    "module": "commonjs",                
    "strict": true,                      
    "esModuleInterop": true,             
    "outDir": "./src/dist",                  
    "rootDir": "./src/scripts",                  
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts"                        
  ],
  "exclude": [
    "node_modules"
  ]
}
